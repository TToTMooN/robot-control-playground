<?xml version="1.0" ?>
<mujoco model="mass_spring">
    <option timestep="0.001" gravity="0 0 0"/>

    <worldbody>
        <body name="cart" pos="0 0 0">
            <joint name="slide"
                   type="slide"
                   axis="1 0 0"
                   springref="0"
                   stiffness="100"
                   damping="2"/>
            <geom type="sphere" size="0.05" rgba="0.2 0.6 0.9 1"/>
        </body>
    </worldbody>

    <!-- add a motor actuator on the slide joint -->
    <actuator>
        <motor name="u"
               joint="slide"
               ctrlrange="-100 100"
               gear="1"/>
    </actuator>
</mujoco>
